extends ../template/layout


//-함수들
mixin titleMainSub(titleMain, titleSub)
  .title-area
    p.title-main= titleMain
    p.title-sub= titleSub

mixin titleMainSubAndScrollID(titleMain, titleSub, scrollID)
  .title-area(data-scroll-id=scrollID)
    p.title-main= titleMain
    p.title-sub= titleSub

mixin inputText(plaName, className)
  input(type="text" class=className autocomplete='off' placeholder=plaName)
    

mixin inputTel(plaName, className)
  input(type="tel" class=className autocomplete='off' placeholder=plaName)

mixin slideListRelese()
  -for (let i= 0; i < 6; i++)
    -let num= i+1;
    if (num < 10)
      -num= "0" + num
    
    a(class="swiper-slide info-box")
      div.car-top
        p.car-num #{num}
        p.car-icon: img(src=`${imgPath}/main/icon_relese.png`, alt="아이콘")
      div.img-area: img(src=`${imgPath}/car/car_relese01.png`, alt="자동차이미지")
      div.car-info
        p.car-name K5
        p.car-deposit 보증금 30%
          p.car-price 월42만원대
        p.car-tip (세금/보험료/방문정비 포함)
        button(type="button" class="btn-quote") 견적신청하기



mixin SpecialInfobox(num)
  a(class="swiper-slide info-box")
    div.car-top
      p.car-num #{num}
      p.car-icon: img(src=`${imgPath}/main/icon_special.png`, alt="아이콘")
    div.img-area: img(src=`${imgPath}/car/car_relese01.png`, alt="자동차이미지")
    div.car-info
      p.car-name K5
      p.car-deposit 보증금 30%
      p.car-price 월42만원대
      p.car-tip (세금/보험료/방문정비 포함)
      button(type="button" class="btn-quote") 견적신청하기


mixin slideListSpecial02()
  -for (let i= 0; i < 12; i++)
    -let num= i+1;
    if (num < 10)
      -num= "0" + num
    +SpecialInfobox(num)  

mixin slideListSpecial()
  -let num= 0;
  -for (let i= 0; i < 2; i++)
    div(class="swiper-slide slide-part")
      -for (let j= 0; j < 6; j++)
        -num +=1;
        -let numString;
        if (num < 10)
          -numString= "0" + num;
        else
          -numString= num;
        
        +SpecialInfobox(numString)
      
      
    
mixin slideArea(classMainName, classStyleName, slideListFomatFun)
  div(class=`slide-cont ${classMainName} ${classStyleName}`)
    div(class="slide-area")
      div(class="swiper")
        div(class="swiper-wrapper car-info-area")
          +#{slideListFomatFun}

      div(class="slide-btn slide-btn-prev")
        img(src="img/main/btn_arrow_left.png", alt="슬라이드 이전")
      div(class="slide-btn slide-btn-next")
        img(src="img/main/btn_arrow_left.png", alt="슬라이드 다음")
        
    div(class="slide-pagination")

mixin reivewArea(name, rankNum, reviewTitle, reviewText, reviewImgPath)
  -let star="";
  li.review-area
    div.img-area: img(src=`${imgPath}${reviewImgPath}`, alt="이미지")
    p.review-title #{reviewTitle}
    p.review-text  #{reviewText}
    div.rank-area
      .icon-people: img(src=`${imgPath}/common/icon_people.png`, alt="이미지")
      p.name #{name} 고객님
      .rank
        -for (let i=0; i < rankNum; i++)
          //-star+="★"
          img(src=`${imgPath}/common/icon_rank_star.png` class="img-rank-star")
        
      
